{
  "compilerOptions": {
    "baseUrl": "src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "paths": {
      "core/*": [
        "core/*"
      ]
    },
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "target": "ES2023",
    "types": [
      "@webgpu/types"
    ]
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ]
}
