{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "paths": {
      "core/*": ["core/*"]
    },
    "target": "es2017",
    "module": "es6",
    "moduleResolution": "Bundler",
//    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "types": [
      "@webgpu/types"
    ],
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}
